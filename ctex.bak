#!/bin/sh

texName=$1
exitSuccessful=0

tmp1=`echo $texName | rev`
tmp2=`echo $tmp1 | sed -e 's/xet//'`
tmp3=`echo $tmp2 | sed -e 's/\.//'`
texName=`echo $tmp3 | rev`

platex $texName.tex > tex.log 2>&1
exit=$?

dvipdfmx $texName.dvi >> tex.log 2>&1

if [ $exit -eq $exitSuccessful ]
then
    open $texName.pdf
else
    cat tex.log
fi
